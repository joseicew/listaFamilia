{
  "name": "Usuario",
  "plural": "Usuarios",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "apellidos": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "solicita": {
      "type": "hasAndBelongsToMany",
      "model": "ListaFamiliar",
      "foreignKey": ""
    },
    "listaFamiliar": {
      "type": "belongsTo",
      "model": "ListaFamiliar",
      "foreignKey": ""
    },
    "owner": {
      "type": "hasOne",
      "model": "ListaFamiliar",
      "foreignKey": "ownerId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "aceptarSolicitud"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "rechazarSolicitud"
    }
  ],
  "methods": {
    "prototype.aceptarSolicitud": {
      "accepts": [
        {
          "arg": "contexto",
          "type": "object",
          "required": false,
          "description": "Context",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "ListaUsuarios",
          "type": "array",
          "root": true,
          "description": "Lista de usuarios de la lista familiar asociada"
        }
      ],
      "description": "Aceptamos la solicitud de un usuario en nuestra lista",
      "http": [
        {
          "path": "/aceptarSolicitud",
          "verb": "put"
        }
      ]
    },
    "prototype.rechazarSolicitud": {
      "accepts": [
        {
          "arg": "contexto",
          "type": "object",
          "required": false,
          "description": "Contexto - Context",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "ListaUsuarios",
          "type": "object",
          "root": true,
          "description": "Lista de usuarios que perteneces actualmente a mi lista"
        }
      ],
      "description": "Rechazamos la solicitud de un usuario a una listaFamiliar",
      "http": [
        {
          "path": "/rechazarSolicitud",
          "verb": "delete"
        }
      ]
    }
  }
}
